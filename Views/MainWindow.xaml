<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WPF_Tool_MultiFolderCreator"
    xmlns:localVM="clr-namespace:WPF_Tool_MultiFolderCreator.ViewModels"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av"
    x:Class="WPF_Tool_MultiFolderCreator.Views.MainWindow"
    Title="Ordner-Generator"
    Width="600"
    Height="400"
    WindowStartupLocation="CenterScreen">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button
            x:Name="bt_SelectCSV"
            Width="120"
            Margin="10"
            HorizontalAlignment="Left"
            
            Content="CSV-Datei auswählen" />

        <TextBlock
            x:Name="CsvPathText"
            Grid.Row="0"
            Margin="140,10,10,10"
            VerticalAlignment="Center" />

        <Button
            x:Name="FolderButton"
            Grid.Row="1"
            Width="120"
            Margin="10"
            HorizontalAlignment="Left"
            
            Content="Zielordner auswählen" />

        <TextBlock
            x:Name="FolderPathText"
            Grid.Row="1"
            Margin="140,10,10,10"
            VerticalAlignment="Center" />

        <Button
            x:Name="CreateButton"
            Grid.Row="2"
            Width="120"
            Margin="10"
            HorizontalAlignment="Left"
            
            Content="Ordner erstellen" />

        <TextBox
            x:Name="StatusTextBox"
            Grid.Row="3"
            Margin="10"
            IsReadOnly="True"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
    </Grid>
</Window>