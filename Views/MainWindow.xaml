<Window
    x:Class="WPF_Tool_MultiFolderCreator.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WPF_Tool_MultiFolderCreator"
    xmlns:localVM="clr-namespace:WPF_Tool_MultiFolderCreator.ViewModels"
    Title="Ordner-Generator"
    Width="600"
    Height="400"
    WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <localVM:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button
            x:Name="bt_SelectCSV"
            Width="120"
            Margin="10"
            HorizontalAlignment="Left"
            Content="CSV-Datei auswählen"
            Command="{Binding SelectCsvFileCommand}" />

        <TextBlock
            x:Name="CsvPathText"
            Grid.Row="0"
            Margin="140,10,10,10"
            VerticalAlignment="Center" />

        <Button
            x:Name="FolderButton"
            Grid.Row="1"
            Width="120"
            Margin="10"
            HorizontalAlignment="Left"
            Click="FolderButton_Click"
            Content="Zielordner auswählen" />

        <TextBlock
            x:Name="FolderPathText"
            Grid.Row="1"
            Margin="140,10,10,10"
            VerticalAlignment="Center" />

        <Button
            x:Name="CreateButton"
            Grid.Row="2"
            Width="120"
            Margin="10"
            HorizontalAlignment="Left"
            Click="CreateButton_Click"
            Content="Ordner erstellen" />

        <TextBox
            x:Name="StatusTextBox"
            Grid.Row="3"
            Margin="10"
            IsReadOnly="True"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
    </Grid>
</Window>